<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/IDstu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="38dp"
        android:text="IDstu"
        app:layout_constraintEnd_toStartOf="@+id/IMIEstu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IMIEstu"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:text="IMIEstu"
        app:layout_constraintStart_toEndOf="@+id/IDstu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NAZWstu"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="90dp"
        android:text="NAZWstu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IMIEstu"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>